<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center bg-dark text-white">
          <h4>Реєстрація</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, 'Електронна пошта' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :password, 'Пароль' %>
              <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :password_confirmation, 'Підтвердження пароля' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit 'Зареєструватися', class: 'btn btn-dark w-100' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= link_to 'Вже маєте акаунт? Увійти', new_session_path(resource_name), class: 'text-primary' %>
      </div>
    </div>
  </div>
</div>
